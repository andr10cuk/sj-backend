{
  "version": "2.4.2",
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "esnext",
    "esModuleInterop": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "rootDir": "./src", // Lokacija TypeScript fajlova
    "outDir": "./dist" // Lokacija gde će se generisati JavaScript fajlovi
  },
  "include": ["src/**/*"], // Uključuje sve fajlove u src direktorijumu
  "exclude": ["node_modules"]
}